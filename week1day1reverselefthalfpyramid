#include <stdio.h>
int main() {
    int n = 5;
    int i, j;
    int num = 2 * n - 2;
    for (i = n; i > 0; i--) {
        for (j = 0; j < n - i; j++) {
            printf(" ");
        } 
        num = num - 2;
        for (j = 0; j < i; j++) {
            printf("*");
      }
        printf("\n");
    }
    return 0;
}
